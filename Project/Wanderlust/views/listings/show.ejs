<% layout('./layouts/boilerplate') -%>

    <body>
        <div class="card mt-5">
            <img src="<%= listingData.image %>" class="card-img-top" alt="..." />
            <div class="card-body mb-3">
                <h5 class="card-title">
                    <%= listingData.title %>
                </h5>
                <p class="card-text">
                    <%= listingData.description %>
                </p>
                <p class="card-text">
                    <b>Price:</b>
                    <%= listingData.price %>
                </p>
                <p class="card-text">
                    <b>Location:</b>
                    <%= listingData.location %>
                </p>
                <p class="card-text">
                    <b>Country:</b>
                    <%= listingData.country %>
                </p>
            </div>
            <div class="controls ml-5">
                <form action="/listings/<%= listingData.id %>/edit" method="get">
                    <button type="submit" class="btn-edit btn-add btn btn-dark px-4">
                        Edit
                    </button>
                </form>
                <form action="/listings/<%= listingData.id %>?_method=DELETE" method="post">
                    <button type="submit" class="btn-delete btn-add btn btn-dark px-4">
                        Delete
                    </button>
                </form>
            </div>
        </div>
        <hr class="my-5">
        <div class="card" style="margin-left: 1rem;">
            <h2>Give a review</h2>
            <form action="/listings/<%= listingData.id %>/reviews" method="post" novalidate class="needs-validation">
                <br>
                <div class="form-group">
                    <label for="formControlRange">Rating</label>
                    <br>
                    <input type="range" class="form-control-range" value="1" id="formControlRange" min="1" max="5"
                        name="rating" oninput="this.nextElementSibling.value = this.value" />
                    <output>1</output><span>ðŸŒŸ</span>
                </div>
                <br>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Comment</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="comment"
                        required></textarea>
                    <div class="invalid-feedback">
                        Enter review comment.
                    </div>
                </div>
                <br>
                <button type="submit" class="btn-add btn-dark btn px-4">
                    Submit
                </button>
            </form>
        </div>
        <hr class="my-5">
